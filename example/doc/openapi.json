{
    "openapi": "3.0.0",
    "info": {
      "title": "请求验证服务",
      "description": "通过openapi json schema 验证请求参数、格式化请求参数、返回参数",
      "contact": {
        "email": "2912150017@qq.com"
      },
      "version": "0.0.1"
    },
    "tags": [
      {
        "name": "api",
        "description": "api接口"
      }
    ],
    "components": {
      "responses": {
        "NotFound": {
          "description": "not found"
        },
        "BadRequest": {
          "description": "not found"
        },
        "NoContent": {
          "description": "no content"
        },
        "Normal": {
          "description": "OK",
          "content":{
            "application/json":{
              "schema":{
                "type":"object",
                "properties":{
                }
              }
            }
          }
        }
      },
      "schemas": {
        "doc":{
          "type":"string",
          "description":"openapi json 文档地址（文件地址或者url）"
        },
        "method":{
          "type":"string",
          "description":"请求方法"
        },
        "url":{
          "type":"string",
          "description":"请求地址"
        },
        "contentType":{
          "type":"string",
          "description":"请求内容格式",
          "enum":["application/json"]
        },
        "body":{
          "type":"string",
          "description":"请求内容"
        },

        "error": {
          "required": [
            "status_code",
            "message"
          ],
          "properties": {
            "status_code": {
              "type": "integer",
              "format": "int32"
            },
            "message": {
              "description": "错误提示",
              "type": "string"
            }
          }
        },
        "noContent": {},
        "Normal": {
          "required": [
            "status_code",
            "message"
          ],
          "properties": {
            "status_code": {
              "description": "200",
              "type": "integer",
              "format": "int32"
            },
            "message": {
              "description": "OK",
              "type": "string"
            }
          }
        },
        "link": {
          "properties": {
            "first": {
              "description": "第一页链接地址",
              "type": "string"
            },
            "last": {
              "description": "最后一页链接地址",
              "type": "string"
            },
            "prev": {
              "description": "上一页链接地址",
              "type": "string"
            },
            "next": {
              "description": "下一页链接地址",
              "type": "string"
            }
          }
        },
        "meta": {
          "properties": {
            "current_page": {
              "description": "当前页面",
              "type": "integer",
              "format": "int32",
              "default": 1
            },
            "last_page": {
              "description": "1",
              "type": "integer",
              "format": "int32"
            },
            "from": {
              "description": "前一页",
              "type": "integer",
              "format": "int32"
            },
            "to": {
              "description": "后一页",
              "type": "integer",
              "format": "int32"
            },
            "path": {
              "description": "请求地址",
              "type": "string"
            },
            "per_page": {
              "description": "没页请求数量",
              "type": "integer",
              "default": "20"
            },
            "total": {
              "description": "总数",
              "type": "integer"
            }
          }
        }
      }
    },
    "paths": {
      "/api/v1/validate/request": {
        "post": {
          "tags": [
            "api"
          ],
          "summary": "验证请求参数",
          "description": "验证请求参数，返回格式话的请求参数",
          "requestBody":{
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "required":["doc","request"],
                  "properties":{
                    "doc":{"$ref":"#/components/schemas/doc"},
                    "request":{
                      "type":"object",
                      "description":"请求体",
                      "required":["method","url","contentType"],
                      "properties":{
                        "method":{"$ref":"#/components/schemas/method"},
                        "url":{"$ref":"#/components/schemas/url"},
                        "contentType":{"$ref":"#/components/schemas/contentType"},
                        "body":{"$ref":"#/components/schemas/body"}
                      }
                    },
                    "response":{
                      "type":"object",
                      "description":"响应体",
                      "properties":{
                        "contentType":{"$ref":"#/components/schemas/contentType"},
                        "body":{"$ref":"#/components/schemas/body"}
  
                      }
                    }
                  }
                  
                }
              }
            }
          },

          "responses": {
            "200": {
              "$ref": "#/components/responses/Normal"
            },
            "400": {
              "$ref": "#/components/responses/BadRequest"
            },
            "404": {
              "$ref": "#/components/responses/NotFound"
            }
          }
        }
      },
      "/api/v1/validate/response": {
        "post": {
          "tags": [
            "api"
          ],
          "summary": "验证返回体",
          "description": "验证返回体，返回格式化的请求响应体",
          "requestBody":{
            "content":{
              "application/json":{
                "schema":{
                  "required":["doc","request","response"],
                  "properties":{
                    "doc":{"$ref":"#/components/schemas/doc"},
                    "request":{
                      "type":"object",
                      "description":"请求体",
                      "required":["method","url","contentType"],
                      "properties":{
                        "method":{"$ref":"#/components/schemas/method"},
                        "url":{"$ref":"#/components/schemas/url"},
                        "contentType":{"$ref":"#/components/schemas/contentType"},
                        "body":{"$ref":"#/components/schemas/body"}
                      }
                    },
                    "response":{
                      "type":"object",
                      "description":"响应体",
                      "required":["contentType","body"],
                      "properties":{
                        "contentType":{"$ref":"#/components/schemas/contentType"},
                        "body":{"$ref":"#/components/schemas/body"}
                      }
                    }
                  }
                }
              }
            }
          },

          "responses": {
            "200": {
              "$ref": "#/components/responses/Normal"
            },
            "400": {
              "$ref": "#/components/responses/BadRequest"
            },
            "404": {
              "$ref": "#/components/responses/NotFound"
            }
          }
        }
      }
    }
  }
  