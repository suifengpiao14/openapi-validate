{
    "openapi": "3.0.0",
    "info": {
      "title": "请求验证服务",
      "description": "通过openapi json schema 验证请求参数、格式化请求参数、返回参数",
      "contact": {
        "email": "2912150017@qq.com"
      },
      "version": "0.0.1"
    },
    "tags": [
      {
        "name": "api",
        "description": "api接口"
      }
    ],
    "components": {
      "responses": {
        "NotFound": {
          "description": "not found",
          "content":{
            "application/json":{
              "schema":{"$ref":"#/components/schemas/response"}
            }
          }
        },
        "BadRequest": {
          "description": "not found",
          "content":{
            "application/json":{
              "schema":{"$ref":"#/components/schemas/response"}
            }
          }
        },
        "InternalServerError": {
          "description": "internal error",
          "content":{
            "application/json":{
              "schema":{"$ref":"#/components/schemas/response"}
            }
          }
        },
        "OK": {
          "description": "OK",
          "content":{
            "application/json":{
              "schema":{"schema":{"$ref":"#/components/schemas/response"}
            }
            }
          }
        }
      },
      "schemas": {
        "doc":{
          "type":"string",
          "description":"openapi json 文档地址（文件地址或者url）"
        },
        "method":{
          "type":"string",
          "description":"请求方法"
        },
        "url":{
          "type":"string",
          "description":"请求地址"
        },
        "contentType":{
          "type":"string",
          "description":"请求内容格式",
          "enum":["application/json"]
        },
        "body":{
          "type":"string",
          "description":"请求内容"
        },
        "status": {
          "type": "integer",
          "format": "int32",
          "description":"业务响应状态"
        },
        "message": {
          "description": "业务状态说明",
          "type": "string"
        },
        "items":{
          "type":"array",
          "description":"记录集合",
          "items":{
            "type":"object",
            "description":"记录"
          }
        },
        "item":{
          "type":"object",
          "description":"记录"
        },
        "response": {
          "required": [
            "status",
            "message"
          ],
          "properties": {
            "status": {"$ref":"#/components/schemas/status"},
            "message": {"$ref":"#/components/schemas/message"},
            "items":{"$ref":"#/components/schemas/items"},
            "item":{"$ref":"#/components/schemas/item"}
          }
        }
      }
    },
    "paths": {
      "/api/v1/validate/request": {
        "post": {
          "tags": [
            "api"
          ],
          "summary": "验证请求参数",
          "description": "验证请求参数，返回格式话的请求参数",
          "requestBody":{
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "required":["doc","request"],
                  "properties":{
                    "doc":{"$ref":"#/components/schemas/doc"},
                    "request":{
                      "type":"object",
                      "description":"请求体",
                      "required":["method","url","contentType"],
                      "properties":{
                        "method":{"$ref":"#/components/schemas/method"},
                        "url":{"$ref":"#/components/schemas/url"},
                        "contentType":{"$ref":"#/components/schemas/contentType"},
                        "body":{"$ref":"#/components/schemas/body"}
                      }
                    },
                    "response":{
                      "type":"object",
                      "description":"响应体",
                      "properties":{
                        "contentType":{"$ref":"#/components/schemas/contentType"},
                        "body":{"$ref":"#/components/schemas/body"}
  
                      }
                    }
                  }
                  
                }
              }
            }
          },

          "responses": {
            "200": {
              "$ref": "#/components/responses/OK"
            },
            "400": {
              "$ref": "#/components/responses/BadRequest"
            },
            "404": {
              "$ref": "#/components/responses/NotFound"
            },
            "500": {
              "$ref": "#/components/responses/InternalServerError"
            }
          }
        }
      },
      "/api/v1/validate/response": {
        "post": {
          "tags": [
            "api"
          ],
          "summary": "验证返回体",
          "description": "验证返回体，返回格式化的请求响应体",
          "requestBody":{
            "content":{
              "application/json":{
                "schema":{
                  "required":["doc","request","response"],
                  "properties":{
                    "doc":{"$ref":"#/components/schemas/doc"},
                    "request":{
                      "type":"object",
                      "description":"请求体",
                      "required":["method","url","contentType"],
                      "properties":{
                        "method":{"$ref":"#/components/schemas/method"},
                        "url":{"$ref":"#/components/schemas/url"},
                        "contentType":{"$ref":"#/components/schemas/contentType"},
                        "body":{"$ref":"#/components/schemas/body"}
                      }
                    },
                    "response":{
                      "type":"object",
                      "description":"响应体",
                      "required":["contentType","body"],
                      "properties":{
                        "contentType":{"$ref":"#/components/schemas/contentType"},
                        "body":{"$ref":"#/components/schemas/body"}
                      }
                    }
                  }
                }
              }
            }
          },

          "responses": {
            "200": {
              "$ref": "#/components/responses/OK"
            },
            "400": {
              "$ref": "#/components/responses/BadRequest"
            },
            "404": {
              "$ref": "#/components/responses/NotFound"
            },
            "500": {
              "$ref": "#/components/responses/InternalServerError"
            }
          }
        }
      }
    }
  }
  